
server {
    listen 80 sndbuf=65535 rcvbuf=16384;

    # 
    # This vhost will be enabled by /entrypoint.sh with the 'run_yves' or 'run_both' argument
    # 

    server_name {{ getv "public/zed/domain" }};

    access_log  /data/logs/yves-access.log extended;

    root /data/shop/public/Yves;

    set $application_env {{ getv "/application/env" }};
    set $application_store {{ getv "/spryker/shop/cc" }};

    include "spryker/yves.conf";

    ###
    ### Rewrite rules
    ###
    ### Beware of load balancer heartbeat check (/monitoring/heartbeat), it must stay not rewritten.

}
